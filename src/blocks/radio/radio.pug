//- Все примеси в этом файле должны начинаться c имени блока (radio)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку

mixin radio(label, mods, name, id, value, required)

  //- Принимает:
  //-   label      {string} - Текст лейбла для радио-баттона
  //-   mods       {string} - список модификаторов
  //-   name       {string} - атрибут name
  //-   id         {string} - атрибут id
  //- Вызов:
        +radio('Текст лейбла', 'some-mod', 'some-name', 'some-id')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' radio--' + modsList[i].trim();
      }
    }

  label.radio(class= mods)
    if required == true
      input.radio__input(id= id, type= 'radio', name= name, value=value, required)&attributes(attributes)
    else
      input.radio__input(id= id, type= 'radio', name= name, value=value)&attributes(attributes)
    span.radio__fake-input
      if label
        span.radio__label!= label
