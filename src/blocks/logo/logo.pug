//- Все примеси в этом файле должны начинаться c имени блока (logo)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку

mixin logo(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +logo('some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' logo--' + modsList[i].trim();
      }
    }

  a.logo(href="/")
    svg(width="123px", height="38px")
      use(href= src.icon + 'icon__logo')
